{$R *.dfm}

uses U_DM;

procedure TFrm_compra1.bt_novoClick(Sender: TObject);
begin
  inherited;

  Q_padraoCADASTRO.AsDateTime:=Date;
  Q_padraoUSUARIO.AsString:='EDIVALDO';
  Q_padraoVALOR.AsCurrency:=0;
  DB_fornecedor_id.setFocus;

